@model ProdutoDTO
@{
    ViewData["Title"] = "Cadastrar Produto";
}

<div class="row mb-4">
    <div class="col-md-8">
        <h2><i class="fas fa-plus-circle text-success"></i> Cadastrar Novo Produto</h2>
        <p class="text-muted">Adicione um novo produto ao cardápio</p>
    </div>
    <div class="col-md-4 text-end">
        <a href="@Url.Action("Index")" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Voltar
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0"><i class="fas fa-box"></i> Informações do Produto</h5>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="mb-3">
                        <label asp-for="Nome" class="form-label">
                            <i class="fas fa-tag"></i> Nome do Produto *
                        </label>
                        <input asp-for="Nome" class="form-control form-control-lg" placeholder="Ex: Churrasquinho de Picanha" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="idTipoProduto" class="form-label">
                            <i class="fas fa-list"></i> Tipo de Produto *
                        </label>
                        <select asp-for="idTipoProduto" class="form-select form-select-lg" asp-items="ViewBag.TiposProduto">
                            <option value="">-- Selecione um tipo --</option>
                        </select>
                        <span asp-validation-for="idTipoProduto" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Descricao" class="form-label">
                            <i class="fas fa-align-left"></i> Descrição
                        </label>
                        <textarea asp-for="Descricao" class="form-control" rows="3" 
                                  placeholder="Descreva os ingredientes e características do produto..."></textarea>
                        <span asp-validation-for="Descricao" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Preco" class="form-label">
                                <i class="fas fa-dollar-sign"></i> Preço *
                            </label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text">R$</span>
                                <input asp-for="Preco" type="number" step="0.01" class="form-control" placeholder="0,00" />
                            </div>
                            <span asp-validation-for="Preco" class="text-danger"></span>
                        </div>

                        @* Vai ser implementado no futuro *@
                        <div class="col-md-6 mb-3" hidden>
                            <label asp-for="ImagemUrl" class="form-label">
                                <i class="fas fa-image"></i> URL da Imagem
                            </label>
                            <input asp-for="ImagemUrl" class="form-control form-control-lg" placeholder="https://..." />
                            <span asp-validation-for="ImagemUrl" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="form-check form-switch">
                            <input asp-for="Ativo" class="form-check-input" type="checkbox" checked />
                            <label asp-for="Ativo" class="form-check-label">
                                <i class="fas fa-check-circle"></i> Produto Ativo (disponível para venda)
                            </label>
                        </div>
                    </div>

                    <hr class="my-4">

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-success btn-lg">
                            <i class="fas fa-save"></i> Cadastrar Produto
                        </button>
                        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                            <i class="fas fa-times"></i> Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow mb-3 border-info">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0"><i class="fas fa-lightbulb"></i> Dicas</h5>
            </div>
            <div class="card-body">
                <ul class="list-unstyled">
                    <li class="mb-2">
                        <i class="fas fa-check text-success"></i> Use nomes claros e objetivos
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-check text-success"></i> Descreva os ingredientes principais
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-check text-success"></i> Organize por tipos para facilitar
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-check text-success"></i> Mantenha os preços atualizados
                    </li>
                    <li>
                        <i class="fas fa-check text-success"></i> Desative produtos temporariamente indisponíveis
                    </li>
                </ul>
            </div>
        </div>

        <div class="card shadow border-warning">
            <div class="card-header bg-warning">
                <h5 class="mb-0"><i class="fas fa-info-circle"></i> Informação</h5>
            </div>
            <div class="card-body">
                <p class="mb-0">
                    <strong>Campos obrigatórios (*)</strong> devem ser preenchidos para cadastrar o produto.
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Preview de preço formatado
        $('#Preco').on('blur', function() {
            const valor = parseFloat($(this).val());
            if (!isNaN(valor)) {
                $(this).val(valor.toFixed(2));
            }
        });
    </script>
}
